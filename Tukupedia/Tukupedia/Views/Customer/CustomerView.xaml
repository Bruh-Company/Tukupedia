<Window x:Class="Tukupedia.Views.Customer.CustomerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tukupedia.Views.Customer"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        mc:Ignorable="d" Loaded="CustomerView_OnLoaded"
        Title="CustomerView" Height="720" Width="1280" WindowStartupLocation="CenterScreen" MinWidth="1280" MinHeight="720" MaxWidth="1280" MaxHeight="720">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="64" VerticalAlignment="Top" Width="1274" Background="#FF65C65B" Margin="0,0,-0.4,0">
            <Label Name="labelWelcome" Content="Welcome Customer" Margin="14,10,0,10" VerticalAlignment="Center" FontSize="24" HorizontalAlignment="Left" Height="44" FontWeight="Bold"/>
            <Button  Style="{StaticResource btn-navbar}" Content="Settings" HorizontalAlignment="Left" Margin="623,0,0,0" VerticalAlignment="Top" Width="103" FontSize="18" Height="64" FontWeight="Normal"  RenderTransformOrigin="-0.506,0.553" Click="goToSettings"/>
            <Button Style="{StaticResource btn-danger}" Click="BtnLogout_OnClick" x:Name="btnLogout" Content="Logout" HorizontalAlignment="Left" Margin="1175,10,0,0" VerticalAlignment="Top" Width="89" Background="#FFE23434" FontSize="18" Height="44" FontWeight="Normal" BorderBrush="#00673AB7" RenderTransformOrigin="0.472,0.466"/>
            <Button Style="{StaticResource btn-navbar}" Content="Cart" HorizontalAlignment="Left" Margin="386,0,0,0" VerticalAlignment="Top" Width="78" FontSize="18" Height="64" FontWeight="Normal" RenderTransformOrigin="-0.506,0.553" Click="goToCart"/>
            <Button Style="{StaticResource btn-navbar}" Content="My Transactions" HorizontalAlignment="Left" Margin="464,0,0,0" VerticalAlignment="Top" Width="159"  FontSize="18" Height="64" FontWeight="Normal" RenderTransformOrigin="-0.506,0.553" Click="goToTransactions"/>
            <Button Style="{StaticResource btn-navbar}" Content="Home" HorizontalAlignment="Left" Margin="304,0,0,0" VerticalAlignment="Top" Width="82" FontSize="18" Height="64" FontWeight="Normal"  RenderTransformOrigin="-0.506,0.553" Click="goToHome"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="621" Margin="0,69,-3860.4,0" VerticalAlignment="Top" Width="5134">
            <Grid x:Name="grid_Home" HorizontalAlignment="Left" Height="621" VerticalAlignment="Top" Width="1274">
                <Grid HorizontalAlignment="Left" Height="596" Margin="10,10,0,0" VerticalAlignment="Top" Width="193" Background="#FF404040">
                    <Label Content="Category" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20" Foreground="#FF65C65B"/>
                    <ComboBox x:Name="cbCategory" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" Width="173"/>
                    <Slider IsSnapToTickEnabled="True" TickFrequency="100" Minimum="0" Maximum="1000000000"  ValueChanged="SliderMax_OnValueChanged" x:Name="SliderMax" HorizontalAlignment="Left" Margin="10,247,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.533,-0.205" Width="173" Foreground="#FF65C65B" Height="17" FontSize="16"/>
                    <TextBox Text="0,00" x:Name="tbMaxPrice" HorizontalAlignment="Left" Height="27" Margin="36,209,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147"  FontSize="16"/>
                    <Label Content="Maximum Price" HorizontalAlignment="Left" Margin="10,179,0,0" VerticalAlignment="Top" FontSize="16" Foreground="#FF65C65B"/>
                    <Button x:Name="btnFilter" Style="{StaticResource btn-primary}" Content="Filter" HorizontalAlignment="Left" Margin="10,273,0,0" VerticalAlignment="Top" Width="173" Height="32" BorderBrush="#FF404040"/>
                    <Slider IsSnapToTickEnabled="True" TickFrequency="100" Minimum="0" Maximum="1000000000" ValueChanged="SliderMin_OnValueChanged" x:Name="SliderMin" HorizontalAlignment="Left" Margin="10,154,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.533,-0.205" Width="173" Foreground="#FF65C65B" Height="17" FontSize="16" SmallChange="0"/>
                    <TextBox Text="0,00" x:Name="tbMinPrice" HorizontalAlignment="Left" Height="27" Margin="36,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147" FontSize="16"/>
                    <Label Content="Minimum Price" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" FontSize="16" Foreground="#FF65C65B"/>
                    <Label Content="Rp" HorizontalAlignment="Left" Margin="10,122,0,0" VerticalAlignment="Top" Width="21" Padding="0" FontSize="16" RenderTransformOrigin="0.581,0.417"/>
                    <Label Content="Rp" HorizontalAlignment="Left" Margin="10,214,0,0" VerticalAlignment="Top" Width="21" Padding="0" FontSize="16" RenderTransformOrigin="0.581,0.417"/>
                </Grid>
                <Grid HorizontalAlignment="Left" Height="596" Margin="208,10,0,0" VerticalAlignment="Top" Width="1052" Background="#FF404040">
                    <Grid HorizontalAlignment="Left" Height="56" Margin="10,10,0,0" VerticalAlignment="Top" Width="1036">
                        <Button Content="Search" HorizontalAlignment="Left" Margin="786,10,0,0" VerticalAlignment="Top" Width="240" Height="36" Style="{StaticResource btn-primary}"/>
                        <TextBox Style="{StaticResource tb-border-1}" HorizontalAlignment="Center" Height="36" Margin="19,10,255,10" TextWrapping="Wrap" VerticalAlignment="Center" Width="762" FontSize="16" CaretBrush="#FF65C65B"/>
                    </Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" HorizontalAlignment="Left" Height="515" Margin="10,71,0,0" VerticalAlignment="Top" Width="1032">
                        <WrapPanel x:Name="PanelItems" HorizontalAlignment="Left" VerticalAlignment="Top" Width="1070"/>
                    </ScrollViewer>

                </Grid>
            </Grid>
            <Grid x:Name="grid_Cart" HorizontalAlignment="Left" Height="621" VerticalAlignment="Top" Width="1274" Margin="1279,0,0,0" Background="#FF695CAB">
                <Grid HorizontalAlignment="Left" Height="601" Margin="10,10,0,0" VerticalAlignment="Top" Width="939" Background="#FF404040">
                    <Label Content="Cart" HorizontalAlignment="Left" Margin="19,10,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold"/>
                    <ScrollViewer HorizontalAlignment="Left" Height="543" Margin="19,48,0,0" VerticalAlignment="Top" Width="910">
                        <StackPanel Name="spCart" Height="530" Width="879"/>
                    </ScrollViewer>
                </Grid>
                <Grid HorizontalAlignment="Left" Height="601" Margin="954,10,0,0" VerticalAlignment="Top" Width="310" Background="#FF404040">
                    <materialDesign:Card HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" Height="123" Width="290" UniformCornerRadius="10" Background="#FF404040">
                        <Grid HorizontalAlignment="Left" Height="103" Margin="10,10,0,0" VerticalAlignment="Top" Width="270">
                            <ComboBox HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top" Width="250" Height="28"/>
                            <Label Content="Promotions" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top" Height="23" Width="79" FontWeight="Bold"/>
                            <TextBlock HorizontalAlignment="Left" Margin="10,67,0,0" TextWrapping="Wrap" Text="Cashback Amount" VerticalAlignment="Top" Width="119" TextDecorations="{x:Null}" Height="20"/>
                            <TextBlock HorizontalAlignment="Left" Margin="171,68,0,0" TextWrapping="Wrap" Text="Rp69.000.000" VerticalAlignment="Top" TextAlignment="Right" Width="89" FontSize="11" TextDecorations="{x:Null}"/>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card HorizontalAlignment="Left" Margin="10,319,0,0" VerticalAlignment="Top" Height="191" Width="290" UniformCornerRadius="10" Background="#FF404040">
                        <Grid HorizontalAlignment="Left" Height="171" Margin="9,18,0,0" VerticalAlignment="Top" Width="275">
                            <Button Click="btnProceedToCheckout_Click" x:Name="btnProceedToCheckout" Content="Proceed to checkout" HorizontalAlignment="Left" Margin="0,123,0,0" VerticalAlignment="Top" Width="275" Height="43" FontSize="16" Background="#FF65C65B" BorderBrush="#FF404040" FontWeight="Bold"/>
                            <Label Content="Subtotal" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Height="23" Width="56" FontWeight="Bold"/>
                            <Label Content=" I agree to the terms and conditions that apply." HorizontalAlignment="Left" Margin="6,93,0,0" VerticalAlignment="Top" FontSize="10" Height="23" FontStyle="Italic"/>
                            <Rectangle Fill="#FFBDBDBD" HorizontalAlignment="Left" Height="2" Margin="6,65,0,0" Stroke="#00000000" VerticalAlignment="Top" Width="262"/>
                            <Label Content="Summary" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Height="28" Width="64" FontWeight="Bold"/>
                            <Label Name="labelTotal" Content="Total Price (69 Items)" HorizontalAlignment="Left" Margin="9,30,0,0" VerticalAlignment="Top" Height="23" Width="117" FontSize="12" RenderTransformOrigin="0.5,0.5">
                                <Label.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="0.483"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Label.RenderTransform>
                            </Label>
                            <TextBlock Name="tbSubTotal" HorizontalAlignment="Left" Margin="176,34,0,0" TextWrapping="Wrap" Text="Rp69.000.000" VerticalAlignment="Top" TextAlignment="Right" Width="89" FontSize="12" TextDecorations="{x:Null}" RenderTransformOrigin="0.533,-0.347"/>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card HorizontalAlignment="Left" Margin="10,182,0,0" VerticalAlignment="Top" Height="123" Width="290" UniformCornerRadius="10" Background="#FF404040">
                        <Grid HorizontalAlignment="Left" Height="103" Margin="10,10,0,0" VerticalAlignment="Top" Width="270">
                            <ComboBox HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top" Width="250" Height="28"/>
                            <Label Content="Promotions" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top" Height="23" Width="79" FontWeight="Bold"/>
                            <TextBlock HorizontalAlignment="Left" Margin="10,67,0,0" TextWrapping="Wrap" Text="Cashback Amount" VerticalAlignment="Top" Width="119" TextDecorations="{x:Null}" Height="20"/>
                            <TextBlock HorizontalAlignment="Left" Margin="171,68,0,0" TextWrapping="Wrap" Text="Rp69.000.000" VerticalAlignment="Top" TextAlignment="Right" Width="89" FontSize="11" TextDecorations="{x:Null}"/>
                        </Grid>
                    </materialDesign:Card>
                </Grid>

            </Grid>
            <Grid x:Name="grid_Transactions" HorizontalAlignment="Left" Height="621" VerticalAlignment="Top" Width="1274" Margin="2558,0,0,0" Background="#FFEE9D9D"/>
            <Grid x:Name="grid_Settings" HorizontalAlignment="Left" Height="621" VerticalAlignment="Top" Width="1274" Margin="3837,0,0,0" Background="#FF94CCF4"/>
        </Grid>
    </Grid>
</Window>
