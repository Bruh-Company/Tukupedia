<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Tukupedia.Styles">

    <!--
        !! how to use :) !!
    
        COLOR LIST
        secondary : light grey
        success   : green
        danger    : red
        warning   : yellow
    
        Default - color : white
        
        Default with Color
        -> StaticResource text-<COLOR>
        
        Headings & Normal Text
        h1 -> 36 Bold
        h2 -> 30 Bold
        h3 -> 24 Bold
        xl -> 20 SemiBold
        lg -> 18 Regular
        md -> 16 Regular
        sm -> 14 Regular
    
        Headings & Normal Text with color
        StaticResource h1-<COLOR>
        StaticResource h2-<COLOR>
        StaticResource h3-<COLOR>
        StaticResource xl-<COLOR>
        StaticResource lg-<COLOR>
        StaticResource md-<COLOR>
        StaticResource sm-<COLOR>
    -->
    
    <!--Base-->
    <Style TargetType="Label">
        <Setter Property="Foreground" Value="#FFFFFF"/>
    </Style>

    <!--text-success-->
    <Style TargetType="Label" x:Key="text-success">
        <Setter Property="Foreground" Value="#65C65B"/>
    </Style>

    <!--text-secondary-->
