<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Tukupedia.Styles">


    <!--Base-->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="#ffffff"/>
    </Style>
    
    <!--textblock-success-->
    <Style TargetType="TextBlock" x:Key="success">
        <Setter Property="Foreground" Value="#65c65b"/>
    </Style>

    <!--textblock-secondary-->
    <Style TargetType="TextBlock" x:Key="secondary">
        <Setter Property="Foreground" Value="#E7E7E7"/>
    </Style>

    <!--textblock-danger-->
    <Style TargetType="TextBlock" x:Key="danger">
        <Setter Property="Foreground" Value="#E23434"/>
    </Style>

    <!--textblock-warning-->
    <Style TargetType="TextBlock" x:Key="warning">
        <Setter Property="Foreground" Value="#FFC548"/>
    </Style>

